@model List<Instructor>

@{
    ViewData["Title"] = "All Instructors";
}

<h1 class="text-center my-4 text-primary">All Instructors</h1>

<div class="container">
    <div class="row g-4">
        @foreach (var instructor in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 h-100 instructor-card" style="overflow:hidden;">
                    <div class="position-relative">
                        <img src="~/images/@instructor.Img" class="card-img-top" alt="@instructor.Name" style="height: 250px; object-fit: cover;">
                        <span class="badge bg-primary position-absolute top-0 start-0 m-2 fs-6">@instructor.DepartmentID</span>
                        <span class="badge bg-success position-absolute top-0 end-0 m-2 fs-6">Course: @instructor.CourseId</span>
                    </div>
                    <div class="card-body text-center">
                        <h4 class="card-title text-dark fw-bold">@instructor.Name</h4>
                        <p class="text-muted mb-2"><i class="bi bi-geo-alt-fill text-danger"></i> @instructor.address</p>
                        <p class="fw-semibold text-success fs-5">$@instructor.Salary</p>
                    </div>
                    <div class="card-footer bg-light text-center">
                        <a href="/Instructor/Details/@instructor.Id" class="btn btn-outline-primary btn-sm rounded-pill px-3">View Profile</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .instructor-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .instructor-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        border-bottom: 3px solid #0d6efd;
    }
</style>
