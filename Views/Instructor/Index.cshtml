@model List<Instructor>
@{
    ViewData["Title"] = "Instructors";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">👨‍🏫 Instructors</h1>
        <a asp-action="New" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-person-plus-fill me-1"></i> Add Instructor
        </a>
    </div>

    <div class="row g-4">
        @foreach (var instructor in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card instructor-card border-0 shadow-lg rounded-4 h-100">
                    <div class="position-relative">
                        <img src="~/images/@instructor.Img" class="card-img-top" alt="@instructor.Name"
                             style="height:250px;object-fit:cover;">
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-25 d-flex align-items-end p-2 text-white rounded-top-4">
                            <h5 class="mb-1">@instructor.Name</h5>
                        </div>
                    </div>

                    <div class="card-body text-center">
                        <p class="text-muted mb-2"><i class="bi bi-geo-alt text-danger"></i> @instructor.address</p>
                        <p class="text-success fw-bold mb-2"><i class="bi bi-cash-coin"></i> $@instructor.Salary</p>
                        <div class="d-flex justify-content-center gap-2">
                            <span class="badge bg-primary">Dept: @instructor.DepartmentID</span>
                            <span class="badge bg-success">Course: @instructor.CourseId</span>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-center">
                        <a asp-action="Details" asp-route-id="@instructor.Id" class="btn btn-outline-primary rounded-pill px-4 btn-sm">
                            View Profile
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .instructor-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .instructor-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
        }

    .card-img-top {
        border-radius: 1rem 1rem 0 0;
    }
</style>
