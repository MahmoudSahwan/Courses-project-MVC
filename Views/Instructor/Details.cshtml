@model Instructor
@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5 bg-light d-flex align-items-center justify-content-center">
                <img src="~/images/@Model.Img" alt="@Model.Name"
                     class="img-fluid rounded-start-4" style="max-height: 400px; object-fit: cover;">
            </div>

            <div class="col-md-7">
                <div class="card-body p-5">
                    <h2 class="fw-bold text-primary mb-3">@Model.Name</h2>
                    <p class="text-muted mb-3 fs-5">Professional Instructor at Jo Courses</p>
                    <hr />

                    <p><strong>🏡 Address:</strong> <span class="text-dark">@Model.address</span></p>
                    <p><strong>💰 Salary:</strong> <span class="text-success fw-semibold">$@Model.Salary</span></p>
                    <p><strong>🏢 Department ID:</strong> <span class="badge bg-info text-dark">@Model.DepartmentID</span></p>
                    <p><strong>📘 Course ID:</strong> <span class="badge bg-secondary">@Model.CourseId</span></p>

                    <div class="mt-4 d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white rounded-pill px-4">
                            ✏️ Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger rounded-pill px-4">
                            🗑 Delete
                        </a>
                        <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
                            ← Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
</style>
