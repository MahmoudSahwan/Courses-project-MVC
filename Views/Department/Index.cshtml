@model List<Department>

@{
    ViewData["Title"] = "All Departments";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary mb-0">
            <i class="bi bi-building-fill me-2"></i> All Departments
            <span class="badge bg-primary-subtle text-primary fs-6 ms-2">@Model.Count</span>
        </h1>

        <a asp-action="New" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle-fill me-1"></i> Add Department
        </a>
    </div>

    <div class="row g-4">
        @foreach (var dept in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card dept-card shadow-lg border-0 rounded-4 h-100 overflow-hidden">
                    <div class="card-header bg-primary text-white text-center fw-semibold fs-5 py-3">
                        <i class="bi bi-building me-2"></i> @dept.Name
                    </div>

                    <div class="card-body text-center p-4">
                        <div class="mb-2">
                            <i class="bi bi-person-badge-fill text-secondary fs-4 d-block mb-1"></i>
                            <p class="mb-0 text-muted fw-semibold">Manager</p>
                            <p class="text-dark fs-6">@dept.Manger</p>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-center py-3">
                        <a asp-action="Details" asp-route-id="@dept.Id"
                           class="btn btn-outline-primary rounded-pill px-4">
                            <i class="bi bi-eye-fill me-1"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dept-card {
        transition: all 0.3s ease-in-out;
    }

        .dept-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        background: linear-gradient(90deg, #0d6efd, #0b5ed7);
    }

    .btn-success {
        background: linear-gradient(90deg, #198754, #157347);
        border: none;
    }

        .btn-success:hover {
            background: #146c43;
        }
</style>
