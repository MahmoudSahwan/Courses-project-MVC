@model CoursesMVC.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container py-5">
    <div class="text-center mb-4 animate__animated animate__fadeInDown">
        <h1 class="fw-bold text-primary mb-2">
            <i class="bi bi-book-half"></i> Course Details
        </h1>
        <p class="text-muted">Detailed information about the selected course.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInUp">
                <div class="card-header bg-primary text-white text-center fs-5 fw-semibold py-3">
                    @Model.Name
                </div>

                <div class="card-body text-center py-4">
                    <p class="fs-6 mb-3">
                        <i class="bi bi-diagram-3 text-primary"></i>
                        <strong class="text-secondary"> Department:</strong>
                        <span class="text-dark">@Model.Department?.Name</span>
                    </p>

                    <p class="fs-6 mb-3">
                        <i class="bi bi-star-fill text-warning"></i>
                        <strong class="text-secondary"> Degree:</strong>
                        <span class="text-success">@Model.Degree</span>
                    </p>

                    <p class="fs-6 mb-3">
                        <i class="bi bi-graph-down-arrow text-danger"></i>
                        <strong class="text-secondary"> Minimum Degree:</strong>
                        <span class="text-danger">@Model.MinDegree</span>
                    </p>
                </div>

                <div class="card-footer bg-light text-center py-3">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 me-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary rounded-pill px-4 me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger rounded-pill px-4">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }
</style>
