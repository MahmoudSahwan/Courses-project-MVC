@model List<CrsResult>

@{
    ViewData["Title"] = "Course Results";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary fw-bold">
                <i class="bi bi-clipboard-data"></i> All Course Results
            </h1>
            <a asp-action="New" class="btn btn-success rounded-pill px-4 shadow-sm">
                <i class="bi bi-plus-circle"></i> Add Result
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center shadow-sm rounded-4 py-4">
                <i class="bi bi-info-circle fs-4 me-2"></i> No results found.
            </div>
        }
        else
        {
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-gradient text-white" style="background: linear-gradient(90deg, #0d6efd, #3a7bd5);">
                            <tr>
                                <th>#</th>
                                <th>Trainee</th>
                                <th>Course</th>
                                <th>Degree</th>
                                <th>Department</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var res in Model)
                            {
                                <tr>
                                    <td class="fw-semibold text-secondary">@res.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/@res.Trainee?.Image"
                                                 alt="@res.Trainee?.Name"
                                                 width="50" height="50"
                                                 class="rounded-circle border border-2 border-primary me-3 shadow-sm"
                                                 style="object-fit:cover;">
                                            <div>
                                                <div class="fw-bold text-dark">@res.Trainee?.Name</div>
                                                <small class="text-muted">@res.Trainee?.Address</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-dark">@res.Course?.Name</div>
                                        <small class="text-muted">
                                            Min: @res.Course?.MinDegree | Max: @res.Course?.Degree
                                        </small>
                                    </td>
                                    <td class="text-center fw-bold text-success">@res.Degree</td>
                                    <td class="text-secondary">@res.Trainee?.Department?.Name</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@res.Id"
                                           class="btn btn-outline-primary btn-sm rounded-pill px-3 shadow-sm">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</section>

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .table-hover tbody tr:hover {
        background-color: #eef5ff;
        transition: 0.3s;
    }

    th {
        font-weight: 600;
        letter-spacing: 0.5px;
    }
</style>
