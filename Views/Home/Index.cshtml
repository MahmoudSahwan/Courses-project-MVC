@model HomeViewModel
@{
    ViewData["Title"] = "Jo Courses | Home";
}

<!-- Hero Carousel -->
<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/hero1.jpg" class="d-block w-100" style="height: 80vh; object-fit: cover;" alt="Learning">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <h1 class="display-4 fw-bold text-white mb-3 animate__animated animate__fadeInDown box-shadow">Welcome to <span class="text-warning">Jo Courses</span></h1>
                <p class="display-4 fw-bold lead text-danger mb-4 animate__animated animate__fadeInUp text-shadow-lg">Empower your future with high-quality online learning.</p>
                <a href="/Course/Index" class="btn btn-primary btn-lg rounded-pill px-4 fw-semibold shadow-sm me-2">Explore Courses</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/hero2.jpg" class="d-block w-100" style="height: 80vh; object-fit: cover;" alt="Instructors">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <h1 class="display-4 fw-bold text-black mb-3 animate__animated animate__fadeInDown">Learn from the Best Instructors</h1>
                <p class="display-4 fw-bold lead text-danger mb-4 animate__animated animate__fadeInUp">Our team of experts helps you master new skills efficiently.</p>
                <a href="/Instructor/Index" class="btn btn-light btn-lg rounded-pill px-4 fw-semibold shadow-sm">Meet Instructors</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/hero3.jpg" class="d-block w-100" style="height: 80vh; object-fit: cover;" alt="Community">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <h1 class="display-4 fw-bold text-black mb-3 animate__animated animate__fadeInDown">Join Thousands of Learners</h1>
                <p class="display-4 fw-bold lead text-danger mb-4 animate__animated animate__fadeInUp">Be part of a vibrant, growing learning community.</p>
                <a href="/Account/Register" class="btn btn-warning btn-lg rounded-pill px-4 fw-semibold shadow-sm">Join Now</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Features Section -->
<section class="features py-5 bg-light">
    <div class="container text-center">
        <h2 class="fw-bold text-primary mb-5">Why Choose Jo Courses?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded-4 bg-white h-100">
                    <i class="bi bi-mortarboard-fill text-primary fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Expert Instructors</h5>
                    <p class="text-muted">Learn from professionals with real-world experience and deep expertise.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded-4 bg-white h-100">
                    <i class="bi bi-laptop text-success fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Flexible Learning</h5>
                    <p class="text-muted">Study at your own pace, anytime, anywhere — fully online and mobile-friendly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded-4 bg-white h-100">
                    <i class="bi bi-people-fill text-warning fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Community Support</h5>
                    <p class="text-muted">Join a vibrant community of learners and share your learning journey.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ✅ Counters Section -->
<section class="stats py-5 text-white" style="background: linear-gradient(135deg, #000428, #004e92);">
    <div class="container text-center">
        <div class="row g-4">
            <div class="col-md-4">
                <h2 class="display-5 fw-bold" id="coursesCounter">0</h2>
                <p>Courses</p>
            </div>
            <div class="col-md-4">
                <h2 class="display-5 fw-bold" id="instructorsCounter">0</h2>
                <p>Instructors</p>
            </div>
            <div class="col-md-4">
                <h2 class="display-5 fw-bold" id="traineesCounter">0</h2>
                <p>Trainees</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Courses -->
<section class="courses py-5">
    <div class="container">
        <h2 class="text-center text-primary mb-4 fw-bold">Top Featured Courses</h2>
        <div class="row g-4 justify-content-center">
            @foreach (var Crs in Model.Courses)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-lg border-0 rounded-4 h-100 course-card">
                        <div class="card-body text-center p-4">
                            <h5 class="card-title fw-bold text-dark">@Crs.Name</h5>
                            <p class="text-muted mb-2">Degree: <span class="fw-semibold text-success">@Crs.Degree</span></p>
                            <p class="text-muted">Min Degree: <span class="fw-semibold text-danger">@Crs.MinDegree</span></p>
                            <p class="small text-secondary">Department: @Crs.Department?.Name</p>
                            <a href="/Course/Details/@Crs.Id" class="btn btn-outline-primary rounded-pill px-4">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a href="/Course/Index" class="btn btn-primary rounded-pill px-5">View All Courses</a>
        </div>
    </div>
</section>

<!-- Instructors Section -->
<section class="instructors py-5 bg-light">
    <div class="container">
        <h2 class="text-center text-primary mb-4 fw-bold">Meet Our Instructors</h2>
        <div class="row g-4 justify-content-center">
            @foreach (var Ins in Model.Instructors)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card shadow-sm border-0 rounded-4 h-100 text-center instructor-card p-3">
                        <img src="~/images/@Ins.Img" alt="@Ins.Name" class="rounded-circle mb-3 mx-auto" width="110" height="110" style="object-fit:cover;">
                        <h5 class="fw-bold">@Ins.Name</h5>
                        <p class="text-muted mb-1">Salary: <span class="text-success fw-semibold">@Ins.Salary</span></p>
                        <p class="small text-secondary mb-0">Department: @Ins.Department?.Name</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Call To Action -->
<section class="cta py-5 text-white text-center" style="background: linear-gradient(135deg, #0d6efd, #3a7bd5);">
    <div class="container">
        <h2 class="fw-bold mb-3">Ready to Start Your Learning Journey?</h2>
        <p class="lead mb-4">Join thousands of learners who trust Jo Courses to improve their skills.</p>
        <a href="/Account/Register" class="btn btn-light btn-lg rounded-pill px-4 fw-semibold shadow-sm">Join Now</a>
    </div>
</section>

<!-- Subscribe Section -->
<section class="subscribe py-5 bg-white text-center">
    <div class="container">
        <h2 class="fw-bold text-primary mb-3">Stay Updated!</h2>
        <p class="text-muted mb-4">Subscribe to get the latest courses and updates right to your inbox.</p>
        <form class="d-flex justify-content-center">
            <input type="email" class="form-control w-50 rounded-start-pill px-3" placeholder="Enter your email" required>
            <button type="submit" class="btn btn-primary rounded-end-pill px-4">Subscribe</button>
        </form>
    </div>
</section>

<!-- Styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .course-card, .instructor-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .course-card:hover, .instructor-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

    .stats h2 {
        color: #00bcd4;
    }
</style>

<!-- ✅ Counter Script -->
<script>
    const counters = [
        { id: 'coursesCounter', value: @Model.Courses.Count() },
        { id: 'instructorsCounter', value: @Model.Instructors.Count() },
        { id: 'traineesCounter', value: 180 } // مثال - عداد المتدربين
    ];

    counters.forEach(counter => {
        let count = 0;
        const target = counter.value;
        const increment = target / 100;
        const el = document.getElementById(counter.id);
        const interval = setInterval(() => {
            count += increment;
            if (count >= target) {
                count = target;
                clearInterval(interval);
            }
            el.textContent = Math.floor(count);
        }, 20);
    });
</script>
